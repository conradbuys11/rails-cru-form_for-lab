<h1>Edit <%= @song.name %></h1>

<%= form_for(@song) do |f| %>
    <%= f.label :name %>
    <br>
    <%= f.text_field :name %>
    <br>
    <br>
    <%= f.label :artist %>
    <br>
    <%= f.text_field :artist_id, value: @song.artist.name %>
    <br>
    <br>
    <%= f.label :genre %>
    <br>
    <%= f.text_field :genre_id, value: @song.genre.name %>
    <br>
    <br>
    <%= f.submit 'Update Song' %>
<% end %>